#!/bin/zsh

if [[ "$1" == "open" ]]
then
  ./bin/open
fi

# set the magic timer variable
SECONDS=0

# function for trapping CTRL + C
function trap_ctrlc ()
{
  echo "$p" # newline

  # display time the progrma was running for
  if (( $SECONDS > 3600 )) ; then
    let "hours=SECONDS/3600"
    let "minutes=(SECONDS%3600)/60"
    let "seconds=(SECONDS%3600)%60"
    echo ${(%):-%F{cyan}}Media Formatter run time: $hours hour(s), $minutes minute(s) and $seconds second(s)${(%):-%f}
  elif (( $SECONDS > 60 )) ; then
    let "minutes=(SECONDS%3600)/60"
    let "seconds=(SECONDS%3600)%60"
    echo ${(%):-%F{cyan}}Media Formatter run time: $minutes minute(s) and $seconds second(s)${(%):-%f}
  else
    echo ${(%):-%F{cyan}}Media Formatter run time: $SECONDS seconds${(%):-%f}
  fi

  # exit shell script with error code 2
  # if omitted, shell script will continue execution
  exit 2
}

# initialise trap to call trap_ctrlc function
# when signal 2 (SIGINT) is received
trap "trap_ctrlc" 2

bundle install --quiet && \
. ./tmp/.env && \
clear && \
gtimeout --foreground 90m bundle exec ruby lib/main.rb
